{
  "name": "julekort",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build && next export",
    "start": "next start",
    "typeCheck": "tsc",
    "svgo": "npx svgo -f ./ikoner/svg/ -o ./ikoner/svgo/ --precision=1 --disable=removeViewBox --enable=removeDimensions",
    "svgr": "npx @svgr/cli -d ./ikoner/tsx ./ikoner/svgo --typescript --ignore-existing",
    "svgToTsx": "npm run svgo && npm run svgr"
  },
  "dependencies": {
    "@types/styled-components": "^5.1.7",
    "babel-plugin-macros": "^3.0.1",
    "babel-plugin-styled-components": "^1.12.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "next": "10.0.3",
    "prettier": "^2.2.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-use": "^15.3.4",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.14",
    "@types/react": "^17.0.0",
    "typescript": "^4.1.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "prettier": {
    "printWidth": 120
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "tsc"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,md,ts,tsx}": "prettier --write"
  }
}
